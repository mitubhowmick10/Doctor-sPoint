<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mitubhowmick10.version.AnimFirstAid.fevCauses">
    <TextView android:id="@+id/c1"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="1. Virus"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="50dp"
        android:layout_marginBottom="6dp"/>
    <TextView android:id="@+id/c2"
        android:layout_below="@+id/c1"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="2. Bacterial Infection"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="50dp"
        android:layout_marginBottom="6dp"/>
    <TextView android:id="@+id/c3"
        android:layout_below="@+id/c2"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="3. Heat Exhaustation"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="50dp"
        android:layout_marginBottom="6dp"/>
    <TextView android:id="@+id/c4"
        android:layout_below="@+id/c3"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="4. Side Effect of Antibiotics"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="50dp"
        android:layout_marginBottom="6dp"/>
    <Button android:id="@+id/back"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Back"
        tools:layout_editor_absoluteX="200dp"
        tools:layout_editor_absoluteY="30dp" />
</RelativeLayout>
