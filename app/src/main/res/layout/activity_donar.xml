<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.mitubhowmick10.version.DonarActivity">

    <EditText
        android:id="@+id/nameofdonar"
        android:hint="  Name"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        />
    <EditText
        android:id="@+id/occupationofdonar"
        android:hint=" Occupation"
        android:layout_below="@+id/nameofdonar"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        />
    <EditText
        android:id="@+id/ageofdonar"
        android:hint=" Age"
        android:layout_below="@+id/occupationofdonar"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        />
    <EditText
        android:id="@+id/weightofdonar"
        android:hint=" Weight"
        android:layout_below="@+id/ageofdonar"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        />
    <EditText
        android:id="@+id/bldofdonar"
        android:hint=" Blood Group"
        android:layout_below="@+id/weightofdonar"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        />
    <EditText
        android:id="@+id/contactofdonar"
        android:hint=" Contact No."
        android:layout_below="@+id/bldofdonar"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        />
    <Button
        android:id="@+id/submit"
        android:text="submit"
        android:textSize="18dp"
        android:background="@color/colorPrimaryDark"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginEnd="91dp"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/contactofdonar"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/back_button"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/submit"
        android:layout_alignParentStart="true" />
</RelativeLayout>
